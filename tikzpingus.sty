\definecolor{pingu@main}{RGB}{7, 24, 50}% RGB(7, 24, 50)
\definecolor{pingu@white}{RGB}{248,248,248}% RGB(248,248,248)
\definecolor{pingu@yellow}{RGB}{252, 178, 21}% RGB(252, 178, 21)

\newlength\pingu@w@half \pingu@w@half=\dimexpr1cm-.125cm/2\relax
\newlength\pingu@side@h@half \pingu@side@h@half=1.65cm
\newlength\pingu@bend \pingu@bend=.125cm
\newlength\pingu@lower@off \pingu@lower@off=.25cm
\newlength\pingu@outer@off \pingu@outer@off=.25cm
\def\basicfeetbend{45}
\newcommand*\pingu[1][]{\begingroup
    \def\lowerpingu{(0,\pingu@outer@off) to[bend right=\pingu@bend] ++(0,-\pingu@side@h@half-\pingu@outer@off) arc (180:270:.25cm and .15cm) coordinate (feet-right) arc (270:360:.75cm and .05cm) -- ++(-.125cm,0) arc (180:270:.75cm and .05cm) coordinate (feet-left) arc (270:360:.25cm and .15cm) to[bend right=\pingu@bend] ++(0,\pingu@side@h@half+\pingu@outer@off) coordinate[yshift=-\pingu@outer@off] (wings-left) -- cycle coordinate[yshift=-\pingu@outer@off] (wings-right) coordinate[pos=.5,yshift=-\pingu@outer@off] (bottom-top-center)}
    \fill[pingu@main] \lowerpingu;

    \fill[pingu@main] (bottom-top-center)++(0,\pingu@outer@off) ellipse[x radius=\pingu@w@half, y radius=.9\pingu@w@half];


    \coordinate (belly-center) at (\pingu@w@half,-1cm);

    \fill[pingu@white,name path=belly] (belly-center)++(-\pingu@w@half+.1cm,\pingu@lower@off) to[bend right=.8\pingu@bend] ++(0,1.05cm-\pingu@side@h@half-\pingu@lower@off) arc (180:270:.2cm and .1cm) arc (270:360:.7cm and .05cm) -- ++(-.125cm,0) arc (180:270:.7cm and .05cm) arc (270:360:.2cm and .1cm) to[bend right=.8\pingu@bend] ++(0,\pingu@side@h@half-1.05cm+\pingu@lower@off) arc (0:180:\pingu@w@half-.1cm and \pingu@w@half);

    \coordinate (heartp-right) at ([xshift=-.3cm,yshift=.25cm]bottom-top-center);
    \coordinate (heartp-left) at ([xshift=.3cm,yshift=.25cm]bottom-top-center);
    \fill[pingu@white,rotate around={18:(heartp-right)},name path=heartp-r] (heartp-right) ellipse [x radius=.525cm,y radius=.55cm];
    \fill[pingu@white,rotate around={-18:(heartp-left)},name path=heartp-l] (heartp-left) ellipse [x radius=.525cm,y radius=.55cm];

    \path[name intersections={of=heartp-l and belly}]
            (intersection-2) coordinate[xshift=.2cm,yshift=-.0665cm] (arm-left);
    \path[name intersections={of=heartp-r and belly}]
            (intersection-1) coordinate[xshift=-.2cm,yshift=-.0665cm] (arm-right);

    \fill ([yshift=0.015cm,xshift=-.065cm]heartp-right) circle [radius=.115cm];
    \fill ([yshift=0.015cm,xshift=.065cm]heartp-left) circle [radius=.115cm];
    \fill[pingu@yellow] (bottom-top-center)++(-.2cm,.025cm) arc (180:360:.2cm and .225cm) to[bend right=.25cm] cycle;
    \node[gray,scale=2] at([yshift=-.125cm]belly-center) {\faStar};


    \begin{scope}
        \clip\lowerpingu;
    \path[fill,pingu@main,rotate around={-40:(arm-left)}] (arm-left) ellipse [x radius=.195cm, y radius=.925cm];
    \path[fill,pingu@main,rotate around={40:(arm-right)}] (arm-right) ellipse [x radius=.195cm, y radius=.925cm];
    \end{scope}

    \begin{pgfonlayer}{background}
        \coordinate (feet-right-1) at ([xshift=-.1cm]feet-right);
        \coordinate (feet-right-2) at ([]feet-right);
        \coordinate (feet-right-3) at ([xshift= .1cm]feet-right);
        \fill[pingu@yellow,rotate around={-25-\basicfeetbend:(feet-right-1)}] (feet-right-1) ellipse [x radius=.105cm,y radius=.2cm];
        \fill[pingu@yellow,rotate around={-\basicfeetbend:(feet-right-2)}] (feet-right-2) ellipse [x radius=.105cm,y radius=.2cm];
        \fill[pingu@yellow,rotate around={25-\basicfeetbend:(feet-right-3)}] (feet-right-3) ellipse [x radius=.105cm,y radius=.2cm];

        \coordinate (feet-left-1) at ([xshift=-.1cm]feet-left);
        \coordinate (feet-left-2) at ([]feet-left);
        \coordinate (feet-left-3) at ([xshift= .1cm]feet-left);
        \fill[pingu@yellow,rotate around={-25+\basicfeetbend:(feet-left-1)}] (feet-left-1) ellipse [x radius=.105cm,y radius=.2cm];
        \fill[pingu@yellow,rotate around={\basicfeetbend:(feet-left-2)}] (feet-left-2) ellipse [x radius=.105cm,y radius=.2cm];
        \fill[pingu@yellow,rotate around={25+\basicfeetbend:(feet-left-3)}] (feet-left-3) ellipse [x radius=.105cm,y radius=.2cm];
    \end{pgfonlayer}
    \endgroup
}

